{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/DocsPage",
  "definitions": {
    "DocsPage": {
      "properties": {
        "id": {
          "type": "string",
          "description": "Page identifier"
        },
        "title": {
          "type": "string",
          "description": "Page title"
        },
        "path": {
          "type": "string",
          "description": "Page path (relative to docs/)"
        },
        "order": {
          "type": "integer",
          "description": "Order within section"
        },
        "hidden": {
          "type": "boolean",
          "description": "Hide from navigation"
        },
        "external": {
          "type": "boolean",
          "description": "External link (if not a local page)"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "title": "Docs Page",
      "description": "Documentation page reference"
    }
  },
  "title": "DOCSPAGE Configuration Schema",
  "description": "JSON Schema for DocsPage configuration"
}
